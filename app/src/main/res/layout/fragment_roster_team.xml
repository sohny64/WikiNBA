            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:paddingEnd="15dp"
            tools:ignore="InvalidId,RtlSymmetry"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/age1"
